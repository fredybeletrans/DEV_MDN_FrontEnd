@{
    ViewData["Title"] = "CambioContrasena";
}
<script src="~/js/CambioContrasena.js"></script>

<div id="frmCambiarContrasena">
    <div class="row g-3">
        <div class="col-lg-12">
            <div class="row g-3">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <div class="card_Mdf">
                        <div class="row g-3">
                            <div class="col-lg-12">
                                <label for="txtNuevoPassWord" class="form-label">Nuevo Password</label>
                                <input type="password" style="width: 100%;" id="txtNuevoPassWord" name="txtNuevoPassWord">
                            </div>
                            <div class="col-lg-12">
                                <label for="txtConfirmarNuevoPassWord" class="form-label">Confirmar Nuevo Password</label>
                                <input type="password" style="width: 100%;" id="txtConfirmarNuevoPassWord" name="txtConfirmarNuevoPassWord">
                            </div>
                            <div class="col-lg-12" style="text-align: center;width:100%;">
                                <button id="btnCambiar" type="button">Cambiar password</button>
                            </div>
                            <div id="AlertCambioPass"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>
</div>




