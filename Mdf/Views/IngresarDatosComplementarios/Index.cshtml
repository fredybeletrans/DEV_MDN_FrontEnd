@{
    ViewData["Title"] = "Ingresar datos Complementarios";
}
@using AspNetCore.ReCaptcha
@using Microsoft.Extensions.Options
@inject IOptions<ReCaptchaSettings> ReCaptchaSettings
<p>@TempData["Message"]</p>
<script src="~/js/IngresarDatosComplementarios.js"></script>
<script src="https://www.google.com/recaptcha/api.js?render= @ViewData["ReCaptchaKey"]"></script>
<style>
    .k-stepper .k-step-indicator {
        width: 78px;
        height: 78px;
        /*font-family: sans-serif;*/
        font-size: large;
    }
</style>
<form id="frmIngresarDatosCom">
    <div class="col-lg-12">
        <div class="card_Mdf">
            <div class="row g-3">
                <nav id="step_Registro" class="step_Registro"></nav>
            </div>
            <div class="container">
                <div class="row g-3" id="step0" style="display:flex;">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6">

                        <div class="row g-3">
                            <div class="col-lg-6">
                                <label for="CmbTipoPersona" class="form-label">Tipo de Persona</label>
                                <input id="CmbTipoPersona" name="CmbTipoPersona" style="width: 100%;" />
                            </div>
                            <div class="col-lg-6">
                                <label for="CmbTipoIdentificacion" class="form-label">Tipo de Identificación</label>
                                <input id="CmbTipoIdentificacion" name="CmbTipoIdentificacion" style="width: 100%;" />
                            </div>
                            <br />
                            <div class="col-lg-6">
                                <label for="txtUsuario" class="form-label">Usuario</label>
                                <input type="text" style="width: 100%;" id="txtUsuario" name="txtUsuario" />
                            </div>
                            <div class="col-lg-12">
                                <label for="txtEmail" class="form-label">Email</label>
                                <input type="email" style="width: 100%;" id="txtEmail" name="txtEmail" />
                            </div>
                            <div class="col-lg-6">
                                <label for="txtPassWordUsuario" class="form-label">Ingrese Password</label>
                                <input type="password" style="width: 100%;" id="txtPassWordUsuario" name="txtPassWordUsuario" />
                            </div>
                            <div class="col-lg-6">
                                <label for="txtConfirmarPassWordUsuario" class="form-label">Confirmar Password</label>
                                <input type="password" style="width: 100%;" id="txtConfirmarPassWordUsuario" name="txtConfirmarPassWordUsuario" />
                            </div>
                            <div class="col-lg-6"></div>
                            <div class="col-lg-6 k-rtl">
                                <button id="btnStep0Next" type="button">Continuar</button>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
                <div class="row g-3" id="step1" style="display:none;">
                    @*<div class="col-lg-3"></div>*@
                    <div class="col-lg-12">
                        <br />

                        <div class="row g-3" id="peVista" style="display:none;">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-8"> @await Html.PartialAsync("_PersonaExtranjeraDatosComple")</div>
                            <div class="col-lg-2"></div>
                        </div>
                        <div class="row g-3" id="pnVista" style="display:none;">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-8">@await Html.PartialAsync("_PersonaNaturalDatosComple")</div>
                            <div class="col-lg-2"></div>

                        </div>
                        <div class="row g-3" id="pjVista" style="display:none;">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-8">@await Html.PartialAsync("_PersonaJuridicaDatosComple")</div>
                            <div class="col-lg-2"></div>

                        </div>
                        <div class="row g-3" id="insVista" style="display:none;">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-8">@await Html.PartialAsync("_InstitucionDatosComple")</div>
                            <div class="col-lg-2"></div>

                        </div>
                        <div class="row g-3">
                            <br />
                        </div>
                        <div class="row g-3">
                            <div class="col-lg-2"></div>
                            <div class="col-lg-8">
                                <div class="row g-3">
                                    <div class="col-lg-6">
                                        <button id="btnStep1Prev" type="button">Volver</button>
                                    </div>
                                    <div class="col-lg-6 k-rtl">
                                        <button id="btnStep1Next" type="button">Continuar</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2"></div>
                        </div>
                    </div>
                    @*<div class="col-lg-3"></div>*@
                </div>

                @await Html.PartialAsync("_RegistroPreguntasSeguridad")
                @await Html.PartialAsync("_ConfirmarDatosComple")
            </div>
        </div>
    </div>
</form>
